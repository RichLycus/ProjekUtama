{
  "name": "chimera-ai",
  "version": "1.0.0",
  "description": "ChimeraAI - Intelligent Desktop Assistant",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/pre-build.cjs && node scripts/build-icons.cjs && tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "node scripts/pre-build.cjs && node scripts/build-icons.cjs && vite build && electron-builder"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "ai",
    "desktop"
  ],
  "author": "ChimeraAI Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-store": "^11.0.2",
    "form-data": "^4.0.4",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.507.0",
    "node-fetch": "2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.5.1",
    "react-syntax-highlighter": "^15.6.6",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "^6.0.11",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.chimera.ai",
    "productName": "ChimeraAI",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "backend/**/*",
      "!backend/__pycache__",
      "!backend/**/*.pyc"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__",
          "!**/*.pyc"
        ]
      },
      {
        "from": "build/icon.png",
        "to": "icon.png"
      },
      {
        "from": "public/logo-128.png",
        "to": "logo-128.png"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Utility"
    }
  }
}
