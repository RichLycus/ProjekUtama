{
  "flow_id": "flash_base_v1",
  "name": "Flash Mode - Base",
  "description": "Quick response: Preprocessor → LLM → Persona (persona stays alive!)",
  "version": "1.0.0",
  
  "metadata": {
    "author": "ChimeraAI",
    "created_at": "2025-10-25",
    "updated_at": "2025-10-25",
    "tags": ["flash", "quick", "lightweight", "persona"]
  },
  
  "profile": {
    "target_device": "local",
    "hardware_mode": "gpu_4060",
    "max_memory_gb": 8,
    "concurrency_limit": 2,
    "precision": "fp16",
    "offload_kv_cache": true
  },
  
  "signature": {
    "hash": "sha256:flash_base_v1_simple",
    "last_verified": "2025-10-25T10:00:00Z",
    "auto_update": true
  },
  
  "config": {
    "max_execution_time": 5,
    "enable_cache": false,
    "fallback_on_error": true
  },
  
  "steps": [
    {
      "id": "step_1_preprocess",
      "agent": "preprocessor",
      "description": "Normalize user input",
      "config": {
        "normalize_whitespace": true,
        "max_length": 1000
      },
      "condition": null,
      "timeout": 1,
      "critical": true
    },
    {
      "id": "step_2_llm_generate",
      "agent": "llm_agent",
      "description": "Generate response with LLM",
      "config": {
        "model": "gemma2:2b",
        "temperature": 0.7,
        "max_tokens": 2000
      },
      "condition": null,
      "timeout": 10,
      "critical": true
    },
    {
      "id": "step_3_persona_format",
      "agent": "persona",
      "description": "Apply persona formatting (persona stays alive with LLM!)",
      "config": {
        "persona": "lycus",
        "format": "text",
        "include_metadata": false
      },
      "condition": null,
      "timeout": 5,
      "critical": false
    }
  ],
  
  "error_handling": {
    "retry_on_timeout": true,
    "max_retries": 2,
    "retry_delay": 0.5,
    "fallback_flows": [],
    "log_level": "info",
    "on_fail": null
  },
  
  "optimization": {
    "enable_parallel": false,
    "priority": "speed",
    "adaptive_timeout": true,
    "resource_aware": true
  }
}
